import sequence ;

project /trance/core/test
  : parent /trance
  : requirements
      $(boost-requirements)
      $(project-requirements)
  ;

local run-tests = [ sequence.unique
  [ MATCH (.*/run[0-9]*).cpp : [ glob */*.cpp ] ] ] ;

explicit-alias trance_test_exec
  : /trance/core/test//$(run-tests)
  ;

test run : $(run-tests) ;
